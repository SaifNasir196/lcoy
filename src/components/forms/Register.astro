---
import { Button, FormInput, FormSelect, FormTextarea } from '@odyssey-theme/components';

const socials = [
  "Instagram",
  "Twitter",
  "Facebook",
  "YouTube",
  "TikTok",
  "Friend/Family",
  "Other"

]

const YN = [
  "Yes",
  "No"
]

const industries = [
    "Technology",
    "Fashion",
    "Energy",
    "Transport",
    "Arts",
    "Agriculture",
    "Healthcare and Medicine",
    "Construction",
    "Education"
]

---




      
<form name="gform" id="gform" enctype="text/plain" action="https://docs.google.com/forms/d/e/1FAIpQLSeO_w27YjzTt8yQF48sDl3WQI6XpUuEAsUSAfykhn2wamOdDA/formResponse?" target="hidden_iframe" onsubmit="javascript: vanish()">
  <FormInput type="text" label="Name" name="entry.1631610685" placeholder="John Doe" id="entry.1631610685" />
  <FormInput type="email" label="Email" name="entry.2138965163" placeholder="hello@example.com" id="entry.2138965163"/>
  <FormInput type="text" label="Age" name="entry.612280982" placeholder="15 - 35" id="entry.612280982" />
  <FormSelect label="What industries are you interested in? Select a primary choice." options={industries} name="entry.1867376963" id="entry.1867376963" />
  <FormSelect label="What industries are you interested in? Select a secondary choice." options={industries} name="entry.1770180553" id="entry.1770180553"/>
  <FormSelect label="Are you interested in being a panelist for an industry?" options={YN} name="entry.1306852370" id="entry.1306852370"/>
  <FormTextarea label="If yes, please answer the following in approximately 250-300 words: Why would you like to panel, and what are you aware of or involved in surrounding environmental policy and youth in your chosen industry?"
  name="entry.670002907" id="entry.670002907"/>
  <FormSelect label="How did you hear about us?" options={socials} name="entry.296928995" id="entry.296928995" />
  <Button onClick="vanish()">Submit</Button>
</form>


<iframe name="hidden_iframe" id="hidden_iframe" style="opacity:0;"></iframe>

<div style="display:none" id="sub">Thank you for your interest! We'll update you as soon as a finalised schedule is released. If you're a prospective panelist, we'll let you know the outcome as soon as we can.</div>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>

<script type="text/javascript">
    function vanish() {
        document.getElementById("gform").style.display = "none";
        document.getElementById("sub").style.display = "block";
    }
</script>
