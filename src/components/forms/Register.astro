---
import { Button, FormInput, FormSelect, FormTextarea } from '@odyssey-theme/components';

const selectOptions = [
  "Instagram",
  "Twitter",
  "Facebook",
  "YouTube",
  "TikTok",
  "Friend/Family",
  "Other"

]

---



<form name="gform" id="gform" enctype="text/plain" action="https://docs.google.com/forms/d/e/1FAIpQLScAnQgEXb6_T06uj5wquUHSAGk313Cs4h6wfGmCDPc6Nak7Jg/formResponse?" target="hidden_iframe" onsubmit="javascript: vanish()">
  <FormInput type="text" label="Name" name="entry.1631610685" placeholder="John Doe" id="entry.1631610685" />
  <FormInput type="email" label="Email" name="entry.2138965163" placeholder="hello@example.com" id="entry.2138965163"/>
  <FormSelect label="How did you hear about us?" options={selectOptions} name="entry.296928995" id="entry.296928995" />
  <Button onClick="vanish()">Submit</Button>
</form>


<iframe name="hidden_iframe" id="hidden_iframe" style="display:none;"></iframe>

<div style="display:none" id="sub">Thank you for your interest! We'll let you know as soon as registration for the LCOY is open.</div>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>

<script type="text/javascript">
    function vanish() {
        document.getElementById("gform").style.display = "none";
        document.getElementById("sub").style.display = "block";
    }
</script>